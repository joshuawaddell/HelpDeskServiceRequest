@page "{searchString?}"
@model HelpDeskServiceRequest.Pages.ServiceRequests.IndexModel

@{
    ViewData["Title"] = "Service Requests";
}

<h1>Service Requests</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].CompletionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].Technician)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceRequest[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ServiceRequest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technician)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
